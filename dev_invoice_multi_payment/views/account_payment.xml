<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="account_paumnet_add_method_of_payment" model="ir.ui.view">
        <field name="name">account.paumnet.add.method.of.paynet</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form" />
        <field name="arch" type="xml">
            <xpath expr="//header//button[@name='action_post']" position="replace">
                <button name="action_post" string="Confirm" type="object" class="oe_highlight" modifiers="{}" />
                <button name="dev_generate_moves" string="Confirm" type="object" class="oe_highlight" modifiers="{}" />
            </xpath>
        	<xpath expr="//group//group[@name='group1']//label" position="before">
        		<field name="payment_for" modifiers="{'readonly': [['state', '!=', 'draft']]}" />
        	</xpath>
        	<xpath expr="//field[@name='journal_id']" position="after">
        	   <field name="allocation_amount" modifiers="{'invisible': [['payment_for', '!=', 'multi_payment']]}" />
        	</xpath>




             <xpath expr="//sheet" position="inside">
             	<notebook colspan="4" modifiers="{}">
				   <page string="Payment Item"> 
				        <group> 
				            <group>
				                <button type="object" string="Load Lines" name="load_payment_lines" class="oe_highlight" modifiers="{'invisible': [['state', '=', 'posted']]}" />
				            </group>
				            <group>
				                <button type="object" string="Remove Lines" name="remove_lines" class="oe_highlight" modifiers="{'invisible': [['state', '=', 'posted']]}" />
				            </group>
				        </group>
				        
		             	<field name="dev_invoice_line_ids" nolabel="1" modifiers="{'readonly': [['state', '!=', 'draft']], 'invisible': [['payment_for', '!=', 'multi_payment']]}">
		                    <list editable="bottom">
		                         <field name="invoice_id" />
		                         <field name="account_id" />
		                         <field name="date" />
		                         <field name="due_date" />
		                         <field name="original_amount" />
		                         <field name="balance_amount" />
		                         <field name="full_reconclle" />
		                         <field name="allocation" />
		                         <field name="diff_amt" />
		                         <field name="currency_id" />
		                    </list>
		                </field>
		            </page>
		        </notebook>
            </xpath>
               
        </field>
    </record>
</odoo>
