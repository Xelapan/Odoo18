<odoo>
    <record id="dev_bulk_invoice_view" model="ir.ui.view">
        <field name="name">bulk.invoice.payment.view</field>
        <field name="model">bulk.inv.payment</field>
        <field name="arch" type="xml">
            <form string="Multiple Invoice Payment">
                <group>
                    <group>
                        <field name="payment_type" string="Tipo de Pago"/>
                        <field name="partner_type" string="Tipo Contacto"/>
                        <field name="journal_id" string="Diario"/>
                    </group>
                    <group>
                        <field name="payment_date" string="Fecha de Pago"/>
                        <field name="communication" string="Memo"/>
                        <field name="available_payment_method_line_ids" invisible="1"/>
                        <field name="payment_method_line_id" string="MÃ©todo de Pago"/>
                    </group>
                </group>
                    <seperator string='Invoices'/>
                    <field name="invoice_ids" widget="one2many_list">
<!--                        <list editable="buttom">-->
                        <list>
                            <field name="invoice_id" string="Factura"/>
                            <field name="partner_id" string="Contacto"/>
                            <field name="amount" string="Monto"/>
                            <field name="paid_amount" string="Monto Pagado"/>
                        </list>
                    </field>
                <footer>
                    <button string="Procesar" name="process_payment" type="object" default_focus="1" class="oe_highlight"/>
                    or
                    <button string="Cancelar" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

