<?xml version='1.0' encoding='utf-8'?>
<odoo>

    
    <record id="hr_loan_tree_view" model="ir.ui.view">
        <field name="name">hr.loan.tree</field>
        <field name="model">hr.loan</field>
        <field name="arch" type="xml">
            <list string="Solicitudes de prestamo">
                <field name="name" />
                <field name="employee_id" />
                <field name="loan_amount" />
                <field name="date" />
                <field name="state" />
            </list>
        </field>
    </record>

    <record id="hr_loan_line_tree_view" model="ir.ui.view">
        <field name="name">hr.loan.line.tree</field>
        <field name="model">hr.loan.line</field>
        <field name="arch" type="xml">
            <list string="Pagos de prestamo">
                <field name="date" />
                <field name="employee_id" />
                <field name="employee_contract_id" />
                <field name="loan_id" />
                <field name="paid" />
                <field name="amount" />
            </list>
        </field>
    </record>

    
    <record id="hr_loan_form_view" model="ir.ui.view">
        <field name="name">hr.loan.form</field>
        <field name="model">hr.loan</field>
        <field name="arch" type="xml">
            <form string="Loan Request">
                <header>
                    <button name="compute_installment" type="object" string="Calcular Pagos" class="oe_highlight" modifiers="{}" />
                    <button name="action_submit" type="object" string="Confirmar" class="oe_highlight" modifiers="{}" />
                    <button name="action_cancel" type="object" string="Cancelar" modifiers="{}" />
                    <button name="action_approve" type="object" string="Aprobar" class="oe_highlight" groups="hr.group_hr_manager" modifiers="{}" />
                    <button name="action_refuse" type="object" string="Rechazar" class="oe_highlight" groups="hr.group_hr_manager" modifiers="{}" />
                    <field name="state" widget="statusbar" statusbar_visible="draft,waiting_approval_1,approve" />
                </header>

                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1" />
                        </h1>
                    </div>
                    <group col="4">
                        <field name="employee_id" modifiers="{'readonly': [['state', '=', 'approve']]}" />
                        <field name="employee_contract_id" />
                        <field name="contract_state" />
                        <field name="dpi" />
                        <field name="date" />
                        <field name="department_id" />
                        <field name="job_position" />
                        <field name="concepto" modifiers="{}" />
                        <field name="loan_amount" modifiers="{'readonly': [['state', '=', 'approve']]}" />
                        <field name="installment" modifiers="{'readonly': [['state', '=', 'approve']]}" />
                        <field name="payment_date" modifiers="{'readonly': [['state', '=', 'approve']]}" />
                        <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company" />
                        <field name="currency_id" options="{'no_create': True}" groups="base.group_multi_company" />
                        <field name="reason" modifiers="{}" />
                    </group>
                    <notebook>
                        <page string="Calendario Pagos">
                            <field name="loan_lines">
                                <list string="Installments" editable="bottom">
                                    <field name="employee_contract_id" />
                                    <field name="contract_state" />
                                    <field name="date" modifiers="{}" />
                                    <field name="amount" modifiers="{}" />
                                    <field name="paid" readonly="1" />
                                    <field name="state" readonly="1" optional="hide" />
                                </list>
                            </field>
                            <group class="oe_subtotal_footer oe_right" colspan="2">
                                <field name="total_amount" widget="monetary" options="{'currency_field': 'currency_id'}" />
                                <field name="total_paid_amount" widget="monetary" options="{'currency_field': 'currency_id'}" />
                                <field name="balance_amount" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}" />
                            </group>
                            <div class="oe_clear" />
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    
    <record id="view_loan_request_search_form" model="ir.ui.view">
        <field name="name">hr.loan.search.form</field>
        <field name="model">hr.loan</field>
        <field name="arch" type="xml">
           <search string="Prestamos">
               <filter string="Mis Prestamos" name="myrequest" domain="[('employee_id.user_id.id', '=', uid)]" />
                <field name="employee_id" string="Empleado" />
                <field name="department_id" string="Departmento" />
                    <filter string="Empleado" name="employee_id" context="{'group_by':'employee_id'}" />
                    <filter string="Departmento" name="department_id" context="{'group_by':'department_id'}" />
                    <filter string="Estado" name="status" context="{'group_by':'state'}" />
            </search>
        </field>
    </record>


    
    <menuitem name="Prestamos y Descuentos" id="menu_hr_loans_and_advances" parent="hr.menu_hr_root" sequence="20" />

    <record id="action_hr_loan_request" model="ir.actions.act_window">
        <field name="name">Solicitud de prestamo</field>
        <field name="res_model">hr.loan</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_myrequest': 1}</field>
        <field name="search_view_id" ref="view_loan_request_search_form" />
         <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click para crear una solicitud de credito.
            </p><p>
                Use this menu to create loan requests.
            </p>
        </field>
    </record>

    <menuitem name="Prestamos" id="menu_base_hr_loan_request" parent="menu_hr_loans_and_advances" sequence="1" />

    <menuitem name="Prestamos" parent="menu_base_hr_loan_request" id="menu_hr_loan_request" action="action_hr_loan_request" />

    
    <record id="act_hr_employee_loan_request" model="ir.actions.act_window">
        <field name="name">Loans</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.loan</field>
        <field name="binding_model_id" ref="hr.model_hr_employee" />
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_myloan': 1}</field>
        <field name="view_id" eval="hr_loan_tree_view" />
    </record>

    <record id="act_hr_loan_line_request" model="ir.actions.act_window">
        <field name="name">Pagos de Prestamo</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.loan.line</field>
        <field name="view_mode">list</field>
        <field name="view_id" eval="hr_loan_line_tree_view" />
    </record>

    <menuitem name="Pagos Prestamos" parent="menu_base_hr_loan_request" id="menu_hr_loan_line_request" action="act_hr_loan_line_request" />
    
    <record id="view_employee_form_loan_inherit" model="ir.ui.view">
        <field name="name">hr.employee.loan.form.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="%(act_hr_employee_loan_request)d" type="action" class="oe_stat_button" icon="fa-calendar" groups="hr.group_hr_manager,hr.group_hr_user">
                    <field name="loan_count" widget="statinfo" string="Loans" />
                </button>
            </xpath>
        </field>
    </record>
</odoo>
