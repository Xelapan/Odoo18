<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record id="view_salary_advance_form" model="ir.ui.view">
            <field name="name">salary.advance.form</field>
            <field name="model">salary.advance</field>
            <field name="arch" type="xml">
                <form string="Descuentos">
                    <header>
                        <button name="approve_request_acc_dept" string="Aprobar" type="object" class="oe_highlight" groups="gth.nominas_admin" modifiers="{}" />
                        <button name="set_to_draft" string="Borrador" type="object" groups="gth.nominas_admin" modifiers="{}" />
                        <button name="set_to_cobrado" string="Cobrado" type="object" groups="gth.nominas_admin" modifiers="{}" />
                        <button name="reject" string="Rechazar" type="object" groups="gth.nominas_admin" modifiers="{}" />
                        <field name="state" widget="statusbar" statusbar_visible="draft,approve,cobrado,reject" />
                    </header>
                	<sheet>
                        <div class="oe_title oe_left">
                            <h2>
                            <field name="name" class="oe_inline" readonly="1" />
                            </h2>
                        </div>
                		<group>
	                		<group>
	                        	<field name="employee_id" modifiers="{}" />
                                <field name="dpi" modifiers="{}" />
                                <field name="department" modifiers="{}" />
                                <field name="date" modifiers="{}" />
                                <field name="exceed_condition" invisible="1" groups="hr.group_hr_manager,hr.group_hr_user" modifiers="{}" />
		                        <field name="tipo_anticipo" modifiers="{}" />
		                        <field name="concepto" modifiers="{}" />

		                    </group>
		                    <group>
                    			<field name="advance" modifiers="{}" />
                                <field name="currency_id" groups="base.group_multi_currency" modifiers="{}" />
                                <field name="company_id" groups="base.group_multi_currency" modifiers="{}" />
                                <field name="cheque" modifiers="{}" />



                                <field name="journal_id" readonly="1" />
                                <field name="employee_contract_id" />
                                <field name="contract_state" />
	                    	    <field name="reason" modifiers="{}" />
	                    	</group>
                    	</group>
		            </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_salary_advance_tree">
            <field name="name">salary.advance.tree</field>
            <field name="model">salary.advance</field>
            <field name="arch" type="xml">
                <list string="Descuentos">
                    <field name="employee_id" />
                    <field name="date" />
                    <field name="advance" />
                    <field name="state" />
                </list>
            </field>
        </record>

        <record id="view_salary_advance_filter" model="ir.ui.view">
            <field name="name">salary.advance.select</field>
            <field name="model">salary.advance</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="name" string="Descuento" filter_domain="['|',('name','ilike',self)]" />
                    <field name="employee_id" />
                    <field name="state" />
                    <filter string="Mis solicitudes" domain="[('employee_id.user_id.id','=',uid)]" name="my_requests_filter" />
                     <filter domain="[('state', '=', 'draft')]" string="To Submit" name="to_report" help="New Requests" />
                    <filter domain="[('state','in',('submit','waiting_approval'))]" string="Por aprobar" name="submitted" help="Submitted Requests" />
                    <filter domain="[('state', '=', 'approve')]" string="Approved" name="approved" help="Approved Requests" />
                    <separator />
                        <filter string="Empleado" name="employee_id" domain="[]" context="{'group_by':'employee_id'}" />
                        <filter name="State" string="Estado" domain="[]" context="{'group_by':'state'}" />
                        <filter string="Fecha" domain="[]" name="date" context="{'group_by':'date'}" />
               </search>
            </field>
        </record>

        <record id="action_my_salary_advance" model="ir.actions.act_window">
            <field name="name">Descuentos</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">salary.advance</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_salary_advance_filter" />
            <field name="context">{'search_default_my_requests_filter':1}</field>
            <field name="domain">[('employee_id.user_id', '=', uid)]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Crear Descuento.
                </p>
            </field>
        </record>
















         <record id="action_salary_advance_to_approve" model="ir.actions.act_window">
            <field name="name">Descuento</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">salary.advance</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_salary_advance_filter" />
            <field name="context">{'search_default_submitted': 1}</field>
            <field name="domain" />
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Crear Descuento.
                </p>
            </field>
        </record>

        <record id="ir_seq_hr_advance" model="ir.sequence">
			<field name="name">Descuentos</field>
			<field name="code">salary.advance.seq</field>
			<field name="prefix">SAR</field>
			<field name="padding">4</field>
			<field name="number_increment">1</field>
			<field name="number_next_actual">1</field>
			<field name="implementation">standard</field>
            <field name="company_id" eval="False" />
		</record>

        <menuitem id="parent_menu_salary_advance" name="Descuentos" parent="ent_ohrms_loan.menu_hr_loans_and_advances" sequence="7" />

        <menuitem id="menu_salary_advance" action="action_salary_advance_to_approve" parent="parent_menu_salary_advance" name="Descuentos" sequence="3" groups="hr.group_hr_manager,hr.group_hr_user,account.group_account_manager" />

    </data>
</odoo>
