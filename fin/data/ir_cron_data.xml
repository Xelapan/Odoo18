<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="1">
        <!-- Acción Planificada para recalcular las partidas -->
        <record id="ir_cron_recalcular_partidas" model="ir.cron">
            <field name="name">Recalcular Partidas Mensuales</field>
            <field name="model_id" ref="fin.model_numeracion_partidas"/> <!-- Modelo al que pertenece la función -->
            <field name="state">code</field>
            <field name="code">model.cron_calcular_partidas(2024)</field>
            <field name="user_id" ref="base.user_root"/> <!-- Usuario con el que se ejecuta -->
            <field name="interval_number">1</field> <!-- Intervalo de repetición -->
            <field name="interval_type">days</field> <!-- Se ejecuta mensualmente -->
<!--            <field name="numbercall">-1</field> &lt;!&ndash; Ejecutar indefinidamente &ndash;&gt;-->
<!--            <field name="doall" eval="False"/> &lt;!&ndash; No ejecutar si la fecha ya ha pasado &ndash;&gt;-->
        </record>
    </data>
    <data noupdate="1">
        <!-- Tarea programada para ejecutar cada 24 horas -->
        <record id="ir_cron_delete_old_records" model="ir.cron">
            <field name="name">Eliminar Datos Visor Datos por Cuenta Contable</field>
            <field name="model_id" ref="fin.model_account_account_v"/>
            <field name="state">code</field>
            <field name="code">model.delete_old_records()</field>
            <field name="interval_number">24</field>
            <field name="interval_type">hours</field>
<!--            <field name="numbercall">-1</field>-->
<!--            <field name="doall" eval="False"/>-->
            <field name="active" eval="True"/>
        </record>
    </data>
