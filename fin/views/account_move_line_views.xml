<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_move_form_inherit_analytic" model="ir.ui.view">
        <field name="name">account.move.form.inherit.analytic</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Insertar después del campo 'name' en las líneas de factura -->
            <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='analytic_distribution']" position="after">
                <field name="analytic_account_id"/>
            </xpath>
        </field>
    </record>
</odoo>
