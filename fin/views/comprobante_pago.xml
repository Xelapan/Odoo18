    <template id="comprobante_pago">
        <t t-call="web.html_container">
            <t t-call="fin.custom_external_report_fin">
              <t t-foreach="docs" t-as="doc">
                <t t-set="company" t-value="doc.company_id"/>
                <div class="page" t-attf-style="font-family: Arial; font-size: 14px; ">
                  <br/>
                  <br/>
                  <br/>
                  <br/>
                    <div class="row">
                        <div class="col-3 text-center">
                            <t t-if="doc.company_id.logo">
                                <img t-att-src="image_data_uri(doc.company_id.logo)" style="max-height: 50px; width: auto; margin-left: auto; margin-right: auto;" alt="Logo"/>
                            </t>
<!--                            <img t-if="doc.company_id.logo" t-att-src="image_data_uri(doc.company_id.logo)" style="max-height: 50px; width: auto; margin-left: auto; margin-right: auto;" alt="Logo"/>-->
                        </div>
                        <div class="col-3 text-center">
                            <b> <t t-esc="doc.company_id.name"/></b>
                            <br/>
                            <b>Nit: <t t-esc="doc.company_id.vat"/></b>
                        </div>
                        <div class="col-2"/>
                        <div class="col-4">
                            <div class="row">
                                <div class="col-6">
                                    <b>Registro No.: </b>
                                </div>
                                <div class="col-6">
                                    <t t-esc="doc.ref"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <b>Fecha: </b>
                                </div>
                                <div class="col-6">
                                    <t t-esc="doc.get_date()"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <b>Monto: </b>
                                </div>
                                <div class="col-6">
                                    Q <t t-esc="'{:,.2f}'.format(doc.amount)"/>
                                </div>
                            </div>
                        </div>
                    </div>

                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <div class="row">
                        <div class="col-12" style="text-align: center;">
                            <strong>Proveedor: </strong> <t t-esc="doc.partner_id.name"/>
                            <br/>
                            <b>Comprobante de Pago</b>
                        </div>
                    </div>

                    <br/>
                    <br/>
                    <br/>
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th><span>Fecha</span></th>
                                <th><span>No. Doc</span></th>
                                <th><span>Referencia</span></th>
                                <th><span>Monto</span></th>
                                <th><span>Pago</span></th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="doc.dev_invoice_line_ids" t-as="inv">
                                <!-- MOVE -->
                                <tr>
                                    <td><span t-field="inv.invoice_id.date"/></td>
                                    <td><span t-field="inv.invoice_id.name"/></td>
                                    <td><span t-field="inv.invoice_id.ref"/></td>
                                    <td class="text-end"><span t-field="inv.original_amount"/></td>
                                    <td class="text-end"><span t-field="inv.allocation"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                    <div class="row">
                        <div class="col-8"/>
                        <div class="col-2">
                            <strong>Total Aplicado: </strong>
                        </div>
                        <div class="col-2 text-center" style="border-top: 1px solid black;">
                            Q <t t-esc="'{:,.2f}'.format(doc.amount)"/>
                        </div>
                    </div>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <div class="row">
                        <div class="col-12 text-center">
                            <strong>Nombre:_________________________________ </strong>
                            <br/>
                            <br/>
                            <strong>Firma:___________________________________ </strong>
                            <br/>
                            <br/>
                            <strong>No. DPI:__________________________________ </strong>
                            <br/>
                            <br/>
                            <strong>Fecha:__________________________________ </strong>
                            <br/>
                        </div>
                    </div>
                </div>
                <div style="page-break-after: always;"/>
                </t>
            </t>
        </t>
    </template>
