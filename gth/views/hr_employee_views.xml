        <record id="view_ocupaciones_puestos_tree" model="ir.ui.view">
            <field name="name">ocupaciones.puestos.view.tree</field>
            <field name="model">hr.ocupacion.puesto</field>
            <field name="arch" type="xml">
                <list create="true">
                    <field name="code" />
                    <field name="name" />
                </list>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_ocupaciones_puestos">
            <field name="name">Ocupaciones Puesto</field>
            <field name="res_model">hr.ocupacion.puesto</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="menu_action_ocupaciones_puestos" name="Puesto" parent="hr.menu_config_employee" action="action_ocupaciones_puestos" />


