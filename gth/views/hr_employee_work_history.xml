<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_employee_job_salary_form" model="ir.ui.view">
        <field name="name">hr.employee.history.job.salary.form</field>
        <field name="model">hr.employee.history.job.salary</field>
        <field name="arch" type="xml">
            <form string="Record Laboral">
                <group>
                    <field name="identification_employee_id" required = "1"/>
                    <field name="employee" required = "1"/>
                    <field name="date_start" required = "1"/>
                    <field name="date_end" required = "1"/>
                    <field name="company" required = "1"/>
                    <field name="job" required = "1"/>
                    <field name="salary" required = "1"/>
<!--                    <field name="contract_id" />-->
                </group>
                <footer>
                    <button string="Guardar" type="primary" class="btn-primary" special="save" />
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record model="ir.actions.act_window" id="action_save">
            <field name="name">Historial de puestos</field>
            <field name="res_model">hr.employee.history.job.salary</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_hr_employee_job_salary_form" />
            <field name="target">new</field>
        </record>
</odoo>
