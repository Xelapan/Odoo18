<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista de lista -->
        <record id="view_sale_order_13_report_tree" model="ir.ui.view">
            <field name="name">sale.order.13.report.tree</field>
            <field name="model">sale.order.13.report</field>
            <field name="arch" type="xml">
                <list string="Sale Order 13 Report" create="0" edit="1" js_class="SaleOrder13VTreeView">
                        <field name="ticket"/>
                        <field name="solicitud" widget="many2one" optional="show"/>
<!--                         <field name="mesa_servicio" widget="many2one"/>-->
                        <field name="area" optional="show"/>
                        <field name="asignado" optional="hide"/>
                        <field name="etapa" optional="show"/>
                        <field name="tipo" optional="show"/>
                        <field name="fecha_creado" optional="hide"/>
                        <field name="fecha_concluido" optional="show"/>
                        <field name="fecha_rechazo" optional="hide"/>
                        <field name="requisicion" widget="many2one"/>
                        <field name="fecha_requisicion" optional="hide"/>
                        <field name="estado_requisicion" optional="show"/>
                        <field name="req_total" optional="show"/>
                        <field name="venta16" widget="many2one" optional="show"/>
                        <field name="fecha_venta16" optional="hide"/>
                        <field name="estado_venta16" optional="hide"/>
                        <field name="venta_total16" widget="monetary" optional="show"/>
                        <field name="venta_firma16" optional="show"/>
                        <field name="requisicion_13" widget="url" optional="show"/>
                        <field name="fecha_requisicion13" optional="hide"/>
                        <field name="estado_requisicion13" optional="show"/>
                        <field name="venta13" widget="url" optional="show"/>
                        <field name="fecha_venta13" optional="hide"/>
                        <field name="estado_venta13" optional="hide"/>
                        <field name="venta_total13" widget="monetary" optional="show"/>
                        <field name="estado_factura13" optional="show"/>
                </list>
            </field>
        </record>

        <!-- Vista de formulario -->
        <record id="view_sale_order_13_report_form" model="ir.ui.view">
            <field name="name">sale.order.13.report.form</field>
            <field name="model">sale.order.13.report</field>
            <field name="arch" type="xml">
                <form string="Sale Order 13 Report">
                    <group>
                        <field name="ticket"/>
                        <field name="solicitud" widget="many2one"/>
<!--                         <field name="mesa_servicio" widget="many2one"/>-->
                        <field name="area"/>
                        <field name="asignado"/>
                        <field name="etapa"/>
                        <field name="tipo"/>
                        <field name="fecha_creado"/>
                        <field name="fecha_concluido"/>
                        <field name="fecha_rechazo"/>
                        <field name="requisicion" widget="many2one"/>
                        <field name="fecha_requisicion"/>
                        <field name="estado_requisicion"/>
                        <field name="req_total"/>
                        <field name="venta16" widget="many2one"/>
                        <field name="fecha_venta16"/>
                        <field name="estado_venta16"/>
                        <field name="venta_total16" widget="monetary"/>
                        <field name="requisicion_13" widget="url"/>
                        <field name="fecha_requisicion13"/>
                        <field name="estado_requisicion13"/>
                        <field name="venta13" widget="url"/>
                        <field name="fecha_venta13"/>
                        <field name="estado_venta13"/>
                        <field name="venta_total13" widget="monetary"/>
                        <field name="estado_factura13"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_sale_order_13_report" model="ir.actions.act_window">
            <field name="name">Consolidacion Tickets</field>
            <field name="res_model">sale.order.13.report</field>
            <field name="view_mode">list</field>
            <field name="view_id" ref="view_sale_order_13_report_tree"/>
            <field name="help">Consolidacion de tickets</field>
        </record>

        <record id="action_sale_order_13_tree" model="ir.actions.server">
            <field name="name">Open Sale Order 13</field>
            <field name="model_id" ref="model_sale_order_13_report"/>
            <field name="state">code</field>
            <field name="code">
                action = env['sale.order.13.report'].action_open_consolidado_ticket()
            </field>
        </record>

        <menuitem id="menu_datos_13" name="Consolidado Tickets" parent="helpdesk.menu_helpdesk_root" action="action_sale_order_13_tree"/>

        <record id="view_sale_order_13_report_search" model="ir.ui.view">
            <field name="name">sale.order.13.report.search</field>
            <field name="model">sale.order.13.report</field>
            <field name="arch" type="xml">
                <search string="Buscar en el Consolidado Tickets">
                    <!-- Aquí puedes agregar campos de búsqueda -->
                    <field name="ticket" string="Número de Ticket"/>
                    <field name="asignado" string="Asignado"/>
                    <field name="solicitud" string="Solicitud"/>
                    <field name="area" string="Área"/>
                    <field name="etapa" string="Etapa"/>
                    <field name="tipo" string="Tipo"/>
                    <!-- Agrega más campos según sea necesario -->
                </search>
            </field>
        </record>
    </data>
</odoo>
