<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista del Wizard -->
        <record id="view_sale_order_13_wizard_form" model="ir.ui.view">
            <field name="name">sale.order.13.wizard.form</field>
            <field name="model">sale.order.13.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Parametros">
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                        <field name="area_ids" widget="many2many_tags"/>
                        <field name="employee_ids" widget="many2many_tags"/>
                        <field name="no_ticket"/>
                    </group>
                    <footer>
                        <button name="open_consolidado_ticket" type="object" string="Consolidado Tickets" class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- AcciÃ³n del Wizard -->
        <record id="action_sale_order_13_wizard" model="ir.actions.act_window">
            <field name="name">Consolidado Tickets</field>
            <field name="res_model">sale.order.13.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_sale_order_13_wizard_form"/>
        </record>
    </data>
</odoo>
