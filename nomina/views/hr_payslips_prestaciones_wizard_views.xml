<odoo>
    <data>
        <!-- Vista del Wizard -->
        <record id="view_prestaciones_wizard_form" model="ir.ui.view">
            <field name="name">hr.payslip.prestaciones.wizard.form</field>
            <field name="model">hr.payslip.prestaciones.wizard</field>
            <field name="arch" type="xml">
                <form string="Prestaciones de Nómina">
                    <group>
                        <field name="date_to"/>
                        <field name="company_id" readonly="1"/>
                    </group>
                    <footer>
                        <button name="open_prestaciones_at_date" type="object" string="Consultar" class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Acción del Wizard -->
        <record id="action_prestaciones_wizard" model="ir.actions.act_window">
            <field name="name">Consultar Prestaciones</field>
            <field name="res_model">hr.payslip.prestaciones.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_prestaciones_wizard_form"/>
        </record>
    </data>
</odoo>
