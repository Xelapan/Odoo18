        <record id="view_hr_payslip_form_inherit_uae_payroll" model="ir.ui.view">
            <field name="name">hr.payslip.form.inherit</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
            <field name="arch" type="xml">
               <xpath expr="/form/header/button[@name='refund_sheet']" position="after">
                    <button name="%(payslip_payment.hr_payslip_sheet_register_payment_wizard_action)d" states="done" type="action" string="Generar Pago" class="oe_highlight o_expense_sheet_pay" context="{'default_amount': total_amount}" groups="account.group_account_manager"/>
               </xpath>
               <xpath expr="/form/header/button[@name='action_payslip_paid']" position="attributes">
                    <attribute name="invisible">1</attribute>
               </xpath>

               <xpath expr="/form/header/field[@name='state']" position="replace">
                   <field name="state" widget="statusbar" statusbar_visible="draft,confirm,done"/>
                   <field name="total_amount" invisible="1"/>
               </xpath>
               <xpath expr="//field[@name='struct_id']" position="after">
                   <field name="balance"/>
               </xpath>
               <xpath expr="//page[@name='account_info']" position="after">
                    <page string="Pago">
                                <field name="payment_ids" readonly="1">
                                    <tree string="Pagos">
                                            <field name="name"/>
                                            <field name="date"/>
                                            <field name="partner_id"/>
                                            <field name="journal_id"/>
    <!--                                        <field name="communication"/>-->
                                            <field name="amount"/>
                                            <field name="state"/>
                                        </tree>
                                </field>
                    </page>
                </xpath>
<!--                <sheet position="after">-->
<!--                    <div class="oe_chatter">-->
<!--                        <field name="message_follower_ids" widget="mail_followers"/>-->
<!--                        <field name="message_ids" widget="mail_thread"/>-->
<!--                    </div>-->
<!--                </sheet>-->
            </field>
        </record>

        <record id="hr_payslip_run_form_inherit" model="ir.ui.view">
            <field name="name">hr.payslip.run.form.inherit</field>
            <field name="model">hr.payslip.run</field>
            <field name="inherit_id" ref="hr_payroll.hr_payslip_run_form"/>
            <field name="arch" type="xml">
<!--                <xpath expr="/form/header/button[@name='close_payslip_run']" position="after">-->
                <xpath expr="/form/header/button[@name='action_paid']" position="after">
                        <button name="%(payslip_payment.hr_payslip_batchwise_sheet_register_payment_wizard_action)d" states="verify,close" type="action" string="Generar Pagos" class="oe_highlight o_expense_sheet_pay" context="{'default_batch_id': active_id}" groups="account.group_account_manager"/>
                        <button name="batch_wise_payslip_confirm" states="draft, verify" type="object" string="Confirmar NÃ³minas" class="oe_highlight o_expense_sheet_pay" groups="account.group_account_manager"/>
                </xpath>
                <xpath expr="/form/header/button[@name='action_paid']" position="replace">
                  <button name="action_paid" type="object" string="Cerrar" states="paid" class="oe_highlight"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>