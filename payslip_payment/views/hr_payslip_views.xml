<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="view_hr_payslip_form_inherit_uaes_payroll2" model="ir.ui.view">
            <field name="name">hr.payslip.form.inherit</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form" />
            <field name="arch" type="xml">
               <xpath expr="/form/header/button[@name='refund_sheet']" position="after">
                    <button name="%(payslip_payment.hr_payslip_sheet_register_payment_wizard_action)d" type="action" string="Generar Pago" class="oe_highlight o_expense_sheet_pay" context="{'default_amount': total_amount}" groups="account.group_account_manager" modifiers="{}" />
               </xpath>
               <xpath expr="/form/header/button[@name='action_payslip_paid']" position="attributes">
                    <attribute name="invisible">1</attribute>
               </xpath>

               <xpath expr="/form/header/field[@name='state']" position="replace">
                   <field name="state" widget="statusbar" statusbar_visible="draft,confirm,done" />
                   <field name="total_amount" invisible="1" />
               </xpath>
               <xpath expr="//field[@name='struct_id']" position="after">
                   <field name="balance" />
               </xpath>
               <xpath expr="//page[@name='account_info']" position="after">
                    <page string="Pago">
                                <field name="payment_ids" readonly="1">
                                    <list string="Pagos">
                                            <field name="name" />
                                            <field name="date" />
                                            <field name="partner_id" />
                                            <field name="journal_id" />

                                            <field name="amount" />
                                            <field name="state" />
                                        </list>
                                </field>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="hr_payslip_run_form_inherit2" model="ir.ui.view">
            <field name="name">hr.payslip.run.form.inherit</field>
            <field name="model">hr.payslip.run</field>
            <field name="inherit_id" ref="hr_payroll.hr_payslip_run_form" />
            <field name="arch" type="xml">

                <xpath expr="/form/header/button[@name='action_paid']" position="after">
<!--                    <button name="%(payslip_payment.hr_payslip_batchwise_sheet_register_payment_wizard_action)d" type="action" string="Generar Pagos" class="oe_highlight o_expense_sheet_pay" context="{'default_batch_id': active_id}" groups="account.group_account_manager" modifiers="{}" />-->
                        <button name="%(payslip_payment.hr_payslip_batchwise_sheet_register_payment_wizard_action)d" type="action" string="Generar Pagos" class="oe_highlight o_expense_sheet_pay" context="{'default_batch_id': id}" groups="account.group_account_manager" modifiers="{'invisible': [['state', 'not in', ['verify','close']]]}" />
                        <button name="batch_wise_payslip_confirm" type="object" string="Confirmar NÃ³minas" class="oe_highlight o_expense_sheet_pay" groups="account.group_account_manager" modifiers="{'invisible': [['state', 'not in', ['draft','verify']]]}" />
                </xpath>
                <xpath expr="/form/header/button[@name='action_paid']" position="replace">
                  <button name="action_paid" type="object" string="Cerrar" class="oe_highlight" modifiers="{'invisible': [['state', 'in', ['paid']]]}" />
                </xpath>
            </field>
        </record>

    </data>
</odoo>
