<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_account_move_form_inherit" model="ir.ui.view">
        <field name="name">account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Botón "Posted" accesible para todos los grupos -->
            <xpath expr="//button[@name='action_post']" position="attributes">
                <attribute name="groups">
                    roles_permisos.group_basico_finanzas,
                    roles_permisos.group_medio_finanzas,
                    roles_permisos.group_alto_finanzas,
                    roles_permisos.group_gerencia_finanzas,
                    roles_permisos.group_alto_nominas

                </attribute>
            </xpath>
            <!-- Botón "Restablecer a Borrador" accesible solo para Alto Finanzas y Gerencia Finanzas -->
            <xpath expr="//button[@name='button_draft']" position="attributes">
                <attribute name="groups">
                    roles_permisos.group_basico_finanzas,
                    roles_permisos.group_alto_finanzas,
                    roles_permisos.group_gerencia_finanzas,
                    roles_permisos.group_medio_finanzas,
                    roles_permisos.group_alto_nominas
                </attribute>
            </xpath>
             <!-- Botón "añadir factura rectificativa" accesible solo para Alto Finanzas y Gerencia Finanzas -->
            <xpath expr="//button[@name='action_reverse']" position="attributes">
                <attribute name="groups">
                    roles_permisos.group_alto_finanzas,
                    roles_permisos.group_gerencia_finanzas,
                    roles_permisos.group_medio_finanzas,
                    roles_permisos.group_alto_nominas
                </attribute>
            </xpath>

             <!-- Botón "añadir factura rectificativa" accesible solo para Alto Finanzas y Gerencia Finanzas -->
            <xpath expr="//button[@name='action_register_payment']" position="attributes">
                <attribute name="groups">
                    roles_permisos.group_alto_finanzas,
                    roles_permisos.group_gerencia_finanzas,
                    roles_permisos.group_medio_finanzas,
                    roles_permisos.group_alto_nominas
                </attribute>
            </xpath>

     <!-- Botón "añadir factura rectificativa" accesible solo para Alto Finanzas y Gerencia Finanzas -->
            <xpath expr="//button[@name='preview_invoice']" position="attributes">
                <attribute name="groups">
                    roles_permisos.group_alto_finanzas,
                    roles_permisos.group_gerencia_finanzas,
                    roles_permisos.group_medio_finanzas,
                    roles_permisos.group_alto_nominas
                </attribute>
            </xpath>
        </field>
    </record>


</odoo>

