<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_inventory_at_date_wizard_form" model="ir.ui.view">
        <field name="name">inventory.at.date.wizard.form</field>
        <field name="model">inventory.at.date.wizard</field>
        <field name="arch" type="xml">
            <form string="Generar Reporte de Inventario a la Fecha">
                <group>
<!--                    <field name="warehouse_id"/>-->
                    <field name="location_id"/>
<!--                    <field name="date_from"/>-->
                    <field name="date_to"/>
                    <field name="product_id"/>
                    <field name="company_id" readonly="1"/>
                </group>
                <footer>
                    <button name="generate_report" type="object" string="Generar Reporte" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_inventory_at_date_wizard" model="ir.actions.act_window">
        <field name="name">Generar Reporte de Inventario a la Fecha</field>
        <field name="res_model">inventory.at.date.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_inventory_at_date_wizard_form"/>
        <field name="target">new</field>
    </record>
    <menuitem id="menu_inventory_at_date_report" name="Reporte de Inventario a la Fecha"
               parent="stock.menu_warehouse_report"
              action="action_inventory_at_date_wizard"/>
</odoo>
